    "When": {
      "ObjCategory": [ -96 ]
    }
  },
  // 农场：作物
  {
    "Label": "filter.farm-crops",
    "When": {
      "ObjCategory": [
        -75, // 蔬菜vegetables
        -79, // 水果fruit
        -80, // 花朵flowers
        -81 // 植物greens
      ],
      "ItemId": [
        "Object:417" // 甜宝石浆果sweet gem berry
      ]
    }
  },
  // 农场：种子
  {
    "Label": "filter.farm-seeds",
    "When": {
